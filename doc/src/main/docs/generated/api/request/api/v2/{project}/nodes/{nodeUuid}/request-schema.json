                "type" : "object",
                "id" : "urn:jsonschema:com:gentics:mesh:core:rest:node:field:image:Point",
                "properties" : {
                  "x" : {
                    "type" : "integer"
                  },
                  "y" : {
                    "type" : "integer"
                  },
                  "ratio" : {
                    "type" : "number"
                  }
                }
              },
              "cacheKey" : {
                "type" : "string"
              }
            }
          }
