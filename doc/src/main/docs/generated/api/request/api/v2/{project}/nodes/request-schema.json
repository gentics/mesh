          "name" : {
            "type" : "string",
            "description" : "Name of the referenced element"
          },
          "uuid" : {
            "type" : "string",
            "required" : true,
            "description" : "Uuid of the referenced element"
          },
          "tagFamily" : {
            "type" : "string"
          }
        }
      }
    },
    "publish" : {
      "type" : "boolean",
