      "type" : "object",
      "id" : "urn:jsonschema:com:gentics:mesh:core:rest:node:FieldMap",
      "required" : true,
      "description" : "Dynamic map with fields of the node content.",
      "properties" : {
        "empty" : {
          "type" : "boolean"
        }
      }
    },
    "tags" : {
      "type" : "array",
