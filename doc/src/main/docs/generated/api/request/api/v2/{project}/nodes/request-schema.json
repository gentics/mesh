            "$ref" : "urn:jsonschema:com:gentics:mesh:core:rest:role:RoleReference"
          }
        },
        "update" : {
          "type" : "array",
          "required" : true,
          "description" : "Roles to which the update permission is granted.",
          "items" : {
            "type" : "object",
            "$ref" : "urn:jsonschema:com:gentics:mesh:core:rest:role:RoleReference"
          }
