query Test($type: NodeContainerType) {

  # Via tag
  tag(name: "blue") {
    name

    # Tagged Nodes
    nodes(nodeType: $type, perPage: 1) {
      elements {
        uuid
        version
        isPublished
        isDraft
      }
    }
  }
}

