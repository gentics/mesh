query Test($type: NodeContainerType, $invType: NodeContainerType) {

  # Via UUID
  nodePerUuidInverted: node(uuid: "02e3982b6ad14c1fa4a0b5998a02ff92", nodeType: $invType) {

    # Via Breadcrumb
    breadcrumb(nodeType: $type) {
      uuid
      version
      isPublished
      isDraft
    }
  }
}

# The breadcrumb should only list our own node
# [NO_PERM,PUBLISH_SELECT_DRAFT]=$.data.nodePerUuidInverted.breadcrumb.length()=1
# [NO_PERM,PUBLISH_SELECT_DRAFT]=$.data.nodePerUuidInverted.breadcrumb[0].version=1.1
