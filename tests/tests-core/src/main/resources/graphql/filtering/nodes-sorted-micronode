{
	nodes(filter: {
	    schema: {is: folder}
	    fields: {
	      folder: {
	        micronode: {micronode: {microschema: {is: vcard} }}
	      }
	    }
	  }
	  sort: {
	  	fields: {
	  	  folder: {
	  	  	micronode: {
	  	  	  micronode: {
	  	  	  	fields: {
	  	  	  	  vcard: {
	  	  	  	  	address: DESCENDING
	  	  	  	  }
	  	  	  	}
	  	  	  }
	  	  	}
	  	  }
	  	}
	  }
	  ) {
	    # [$.data.nodes.elements.length()=2]
	    # [$.data.nodes.elements[0].fields.micronode.fields.address=Somewhere]
	    # [$.data.nodes.elements[1].fields.micronode.fields.address=Overthere]
	    # [$.data.nodes.elements=<is-sorted-by:fields.micronode.fields.address:desc>]
		elements {
	      uuid
	      schema {
	        name
	      }
	      ... on folder {
		    fields {
		      micronode {
                    ... on vcard {
					    fields {
                            address
					    }
					}
				}
		    }
		  }
	    }
	}
}
# [$.errors=<is-undefined>]