<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.gentics.mesh</groupId>
		<artifactId>mesh-database-connectors</artifactId>
		<version>3.0.0-SNAPSHOT</version>
	</parent>

	<artifactId>mesh-database-connector-hsqldb</artifactId>
	<packaging>jar</packaging>

	<name>Gentics Mesh - HSQLDB connector</name>

	<dependencies>
		<dependency>
			<groupId>com.gentics.mesh</groupId>
			<artifactId>mesh-database-connector-common</artifactId>
		</dependency>
		<dependency>
			<groupId>org.hsqldb</groupId>
			<artifactId>hsqldb</artifactId>
			<version>2.6.1</version>
		</dependency>
		<dependency>
			<groupId>com.gentics.mesh</groupId>
			<artifactId>mesh-mdm-hibernate-core</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.gentics.mesh</groupId>
			<artifactId>mesh-database-tests-common</artifactId>
			<version>${project.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.gentics.mesh</groupId>
			<artifactId>tests-mesh-hibernate</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/connector.build.properties</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>false</filtering>
				<includes>
					<include>**/*</include>
				</includes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<?m2e ignore?>
						<id>copy-sharedlib-dependencies-no-mesh</id>
						<phase>package</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<excludeScope>test</excludeScope>
							<includeScope>runtime</includeScope>
							<excludeGroupIds>com.gentics.mesh</excludeGroupIds>
							<outputDirectory>${project.build.directory}/mavendependencies-sharedlibs</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<executions>
					<execution>
						<id>1-shade-none-but-mesh-core-and-driver</id>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<filters>
								<filter>
									<artifact>*:*</artifact>
									<excludes>
										<exclude>META-INF/*.SF</exclude>
										<exclude>META-INF/*.DSA</exclude>
										<exclude>META-INF/*.RSA</exclude>
									</excludes>
								</filter>
							</filters>
							<transformers>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer" />
							</transformers>
							<artifactSet>
								<excludes>
									<exclude>com.gentics.mesh:*</exclude>
									<exclude>org.hibernate:*</exclude>
								</excludes>
							</artifactSet>
						</configuration>
					</execution>
					<execution>
						<id>2-shade-none-but-mesh-database-common</id>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<filters>
								<filter>
									<artifact>*:*</artifact>
									<excludes>
										<exclude>META-INF/*.SF</exclude>
										<exclude>META-INF/*.DSA</exclude>
										<exclude>META-INF/*.RSA</exclude>
									</excludes>
								</filter>
							</filters>
							<transformers>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer" />
							</transformers>
							<artifactSet>
								<includes>
									<include>com.gentics.mesh:mesh-database-connector-common</include>
								</includes>
							</artifactSet>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<dependenciesToScan>
						<dependency>com.gentics.mesh:tests-mesh-api</dependency>
						<dependency>com.gentics.mesh:tests-mesh-core</dependency>
						<dependency>com.gentics.mesh:tests-mesh-rest-model</dependency>
						<dependency>com.gentics.mesh:tests-mesh-rest-client</dependency>
						<dependency>com.gentics.mesh:tests-mesh-plugin-api</dependency>
						<dependency>com.gentics.mesh:tests-mesh-server</dependency>
						<dependency>com.gentics.mesh:tests-mesh-changelog-system</dependency>
						<dependency>com.gentics.mesh:tests-mesh-elasticsearch</dependency>
						<dependency>com.gentics.mesh:tests-mesh-distributed</dependency>
						<dependency>com.gentics.mesh:tests-mesh-distributed-coordinator</dependency>
						<dependency>com.gentics.mesh:tests-mesh-service-aws-s3-storage</dependency>
						<dependency>com.gentics.mesh:tests-mesh-service-image-imgscalr</dependency>
						<dependency>com.gentics.mesh:tests-mesh-service-jwt-auth</dependency>
						<dependency>com.gentics.mesh:tests-mesh-service-local-storage</dependency>
						<dependency>com.gentics.mesh:tests-mesh-service-metrics-prometheus</dependency>
						<dependency>com.gentics.mesh:tests-mesh-hibernate</dependency>
						<dependency>com.gentics.mesh:mesh-database-tests-common</dependency>
					</dependenciesToScan>
					<skip>${skip.hsqldb.tests}</skip>
					<jvm>${env.JAVA_HOME}/bin/java</jvm>
					<argLine>-Xms128m -Xmx256m -XX:MaxDirectMemorySize=128m
						--add-opens=java.base/java.util=ALL-UNNAMED
						${jacoco.env}
					</argLine>
					<forkedProcessTimeoutInSeconds>2700</forkedProcessTimeoutInSeconds>
					<rerunFailingTestsCount>0</rerunFailingTestsCount>
					<reuseForks>false</reuseForks>
					<forkCount>${surefire.forkcount}</forkCount>
					<trimStackTrace>false</trimStackTrace>
					<useSystemClassLoader>false</useSystemClassLoader>
					<excludes>
						<include>**/*AbstractTest.java</include>
						<include>**/*Abstract*Test.java</include>
						<exclude>**/*Abstract*.java</exclude>
						<exclude>**/Abstract*.java</exclude>
					</excludes>
					<groups>${surefire.groups}</groups>
					<excludedGroups>${surefire.excludedGroups}</excludedGroups>
					<reportNameSuffix>hsqldb</reportNameSuffix>
					<systemPropertyVariables>
						<mesh.testdb.manager.host>${mesh.testdb.manager.host}</mesh.testdb.manager.host>
						<mesh.testdb.manager.port>${mesh.testdb.manager.port}</mesh.testdb.manager.port>
					</systemPropertyVariables>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>test-jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
