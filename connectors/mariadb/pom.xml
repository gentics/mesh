<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.gentics.mesh</groupId>
		<artifactId>mesh-database-connectors</artifactId>
		<version>3.0.16-SNAPSHOT</version>
	</parent>

	<artifactId>mesh-database-connector-mariadb</artifactId>
	<packaging>jar</packaging>

	<name>Gentics Mesh - MariaDB connector</name>

	<dependencies>
		<dependency>
			<groupId>com.gentics.mesh</groupId>
			<artifactId>mesh-database-connector-common</artifactId>
		</dependency>
		<dependency>
			<groupId>org.mariadb.jdbc</groupId>
			<artifactId>mariadb-java-client</artifactId>
			<version>3.1.2</version>
			<scope>test</scope>
			<exclusions>
				<exclusion>
					<groupId>org.slf4j</groupId>
					<artifactId>slf4j-api</artifactId>
				</exclusion>
				<exclusion>
					<groupId>ch.qos.logback</groupId>
					<artifactId>logback-classic</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>com.gentics.mesh</groupId>
			<artifactId>mesh-mdm-hibernate-core</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.gentics.mesh</groupId>
			<artifactId>mesh-database-tests-common</artifactId>
			<version>${project.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.gentics.mesh</groupId>
			<artifactId>mesh-test-common</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/connector.build.properties</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>false</filtering>
				<includes>
					<include>**/*</include>
				</includes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<?m2e ignore?>
						<id>0-copy-sharedlib-dependencies-no-mesh</id>
						<phase>package</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<excludeScope>test</excludeScope>
							<includeScope>runtime</includeScope>
							<excludeGroupIds>com.gentics.mesh</excludeGroupIds>
							<outputDirectory>${project.build.directory}/mavendependencies-sharedlibs</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<executions>
					<execution>
						<id>1-shade-none-but-mesh-core-and-driver</id>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<filters>
								<filter>
									<artifact>*:*</artifact>
									<excludes>
										<exclude>META-INF/*.SF</exclude>
										<exclude>META-INF/*.DSA</exclude>
										<exclude>META-INF/*.RSA</exclude>
									</excludes>
								</filter>
							</filters>
							<transformers>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer" />
							</transformers>
							<artifactSet>
							<!-- Keep in sync with mesh-bom/pom.xml! -->
								<excludes>
									<exclude>com.gentics.mesh:mesh-api</exclude>
									<exclude>com.gentics.mesh:mesh-common*</exclude>
									<exclude>com.gentics.mesh:mesh-core</exclude>
									<exclude>com.gentics.mesh:mesh-distributed*</exclude>
									<exclude>com.gentics.mesh:mesh-mdm*</exclude>
									<exclude>com.gentics.mesh:mesh-elasticseatch</exclude>
									<exclude>com.gentics.mesh:mesh-graphql</exclude>
									<exclude>com.gentics.mesh:mesh-plugin*</exclude>
									<exclude>com.gentics.mesh:mesh-rest*</exclude>
									<exclude>com.gentics.mesh:mesh-server</exclude>
									<exclude>com.gentics.mesh:mesh-service*</exclude>
									<exclude>com.gentics.mesh:mesh-tests*</exclude>
									<exclude>org.hibernate.*:*</exclude>
									<exclude>org.slf4j:*</exclude>
									<exclude>org.apache.*:*</exclude>
									<exclude>ch.qos.logback:*</exclude>
									<exclude>com.google.dagger:*</exclude>
									<exclude>commons-*:*</exclude>
									<exclude>com.squareup.okhttp3:*</exclude>
									<exclude>org.bouncycastle:*</exclude>
									<exclude>software.amazon.awssdk:*</exclude>
									<exclude>org.raml:*</exclude>
									<exclude>com.google.*:*</exclude>
									<exclude>org.springframework.security:*</exclude>
									<exclude>com.fasterxml.*:*</exclude>
									<exclude>com.hazelcast:*</exclude>
									<exclude>io.vertx:*</exclude>
									<exclude>io.reactivex:*</exclude>
									<exclude>io.micrometer:*</exclude>
									<exclude>com.github.*:*</exclude>
									<exclude>io.netty:*</exclude>
									<exclude>net.lingala.zip4j:*</exclude>
									<exclude>com.gentics.elasticsearch:*</exclude>
									<exclude>org.jsoup:*</exclude>
									<exclude>com.graphql-java:*</exclude>
									<exclude>com.gentics.graphqlfilter:*</exclude>
									<exclude>org.openjdk.nashorn:*</exclude>
									<exclude>com.sksamuel.scrimage:*</exclude>
									<exclude>com.zaxxer:*</exclude>
									<exclude>jakarta.*:*</exclude>
									<exclude>com.squareup.inject:*</exclude>
									<exclude>org.hibernate:*</exclude>
									<exclude>org.liquibase:*</exclude>
									<exclude>org.ehcache:*</exclude>
									<exclude>net.bytebuddy:*</exclude>
									<exclude>javax.*:*</exclude>
									<exclude>net.sf.jopt-simple:*</exclude>
									<exclude>org.hdrhistogram:*</exclude>
									<exclude>org.latencyutils:*</exclude>
									<exclude>org.antlr:*</exclude>
									<exclude>org.assertj:*</exclude>
									<exclude>org.checkerframework:*</exclude>
									<exclude>org.codehaus.jettison:*</exclude>
									<exclude>org.glassfish.jaxb:*</exclude>
									<exclude>org.codehaus.jettison:*</exclude>
									<exclude>org.jboss:*</exclude>
									<exclude>joda-time:*</exclude>
									<exclude>org.mozilla:*</exclude>
									<exclude>org.reactivestreams:*</exclude>
									<exclude>org.yaml:snakeyaml</exclude>
									<exclude>org.codehaus.jettison:*</exclude>
								</excludes>
							</artifactSet>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<dependenciesToScan>
						<dependency>com.gentics.mesh:tests-mesh-api</dependency>
						<dependency>com.gentics.mesh:tests-mesh-core</dependency>
						<dependency>com.gentics.mesh:tests-mesh-rest-model</dependency>
						<dependency>com.gentics.mesh:tests-mesh-rest-client</dependency>
						<dependency>com.gentics.mesh:tests-mesh-plugin-api</dependency>
						<dependency>com.gentics.mesh:tests-mesh-server</dependency>
						<dependency>com.gentics.mesh:tests-mesh-elasticsearch</dependency>
						<dependency>com.gentics.mesh:tests-mesh-distributed</dependency>
						<dependency>com.gentics.mesh:tests-mesh-distributed-coordinator</dependency>
						<dependency>com.gentics.mesh:tests-mesh-service-aws-s3-storage</dependency>
						<dependency>com.gentics.mesh:tests-mesh-service-image-imgscalr</dependency>
						<dependency>com.gentics.mesh:tests-mesh-service-jwt-auth</dependency>
						<dependency>com.gentics.mesh:tests-mesh-service-local-storage</dependency>
						<dependency>com.gentics.mesh:tests-mesh-service-metrics-prometheus</dependency>
						<dependency>com.gentics.mesh:mesh-tests</dependency>
						<dependency>com.gentics.mesh:tests-mesh-hibernate</dependency>
						<dependency>com.gentics.mesh:mesh-database-tests-common</dependency>
					</dependenciesToScan>
					<skip>${skip.mariadb.tests}</skip>
					<jvm>${env.JAVA_HOME}/bin/java</jvm>
					<argLine>-Xms128m -Xmx512m
						--add-opens=java.base/java.util=ALL-UNNAMED
						${jacoco.env}
					</argLine>
					<forkedProcessTimeoutInSeconds>2700</forkedProcessTimeoutInSeconds>
					<rerunFailingTestsCount>${surefire.rerunFailingTestsCount}</rerunFailingTestsCount>
					<reuseForks>false</reuseForks>
					<forkCount>${surefire.forkcount}</forkCount>
					<trimStackTrace>false</trimStackTrace>
					<useSystemClassLoader>false</useSystemClassLoader>
					<excludes>
						<include>**/*AbstractTest.java</include>
						<include>**/*Abstract*Test.java</include>
						<exclude>**/*Abstract*.java</exclude>
						<exclude>**/Abstract*.java</exclude>
					</excludes>
					<groups>${surefire.groups}</groups>
					<excludedGroups>${surefire.excludedGroups}</excludedGroups>
					<reportNameSuffix>mariadb</reportNameSuffix>
					<systemPropertyVariables>
						<mesh.testdb.manager.host>${mesh.testdb.manager.host}</mesh.testdb.manager.host>
						<mesh.testdb.manager.port>${mesh.testdb.manager.port}</mesh.testdb.manager.port>
					</systemPropertyVariables>
				</configuration>
			</plugin>
			<!-- Plugin for managing docker containers for the mesh-testdb-manager -->
			<plugin>
				<groupId>io.fabric8</groupId>
				<artifactId>docker-maven-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<showLogs>mariadb,testdb-manager</showLogs>
					<images>
						<image>
							<alias>mariadb</alias>
							<name>mariadb:10.7</name>
							<run>
								<skip>${skip.mariadb.tests}</skip>
								<cmd>
									<exec>
										<arg>--transaction-isolation=READ-COMMITTED</arg>
										<arg>--binlog-format=ROW</arg>
										<arg>--log-bin=mysqld-bin</arg>
									</exec>
								</cmd>
								<env>
									<MYSQL_DATABASE>mesh</MYSQL_DATABASE>
									<MYSQL_USER>meshdbuser</MYSQL_USER>
									<MYSQL_PASSWORD><![CDATA[changeitNow4567&]]></MYSQL_PASSWORD>
									<MYSQL_ROOT_PASSWORD><![CDATA[changeitNow4567&]]></MYSQL_ROOT_PASSWORD>
								</env>
								<wait>
									<log>.*socket: '/run/mysqld/mysqld.sock'  port: 3306  mariadb.org binary distribution*</log>
									<time>120000</time>
								</wait>
								<ports>
									<port>mariadb.port:3306</port>
								</ports>
							</run>
						</image>
						<!-- See https://git.gentics.com/psc/mesh/mesh-testdb-manager -->
						<image>
							<alias>testdb-manager</alias>
							<name>docker.gentics.com/apps/mesh-testdb-manager:latest</name>
							<run>
								<env>
									<MESH_TESTDB_MANAGER_PORT>8080</MESH_TESTDB_MANAGER_PORT>
									<MESH_TESTDB_MANAGER_POOL_SIZE>10</MESH_TESTDB_MANAGER_POOL_SIZE>
									<MESH_TESTDB_MANAGER_THREADS>1</MESH_TESTDB_MANAGER_THREADS>
									<MESH_TESTDB_MANAGER_NAME_PREFIX>mesh_test_</MESH_TESTDB_MANAGER_NAME_PREFIX>
									<MESH_TESTDB_MANAGER_NAME_LENGTH>10</MESH_TESTDB_MANAGER_NAME_LENGTH>

									<MESH_TESTDB_MANAGER_MARIADB_SKIPPED>${skip.mariadb.tests}</MESH_TESTDB_MANAGER_MARIADB_SKIPPED>
									<MESH_TESTDB_MANAGER_MARIADB_HOST>+${docker.container.mariadb.ip}</MESH_TESTDB_MANAGER_MARIADB_HOST>
									<MESH_TESTDB_MANAGER_MARIADB_PORT>3306</MESH_TESTDB_MANAGER_MARIADB_PORT>
									<MESH_TESTDB_MANAGER_MARIADB_HOST_EXTERNAL>localhost</MESH_TESTDB_MANAGER_MARIADB_HOST_EXTERNAL>
									<MESH_TESTDB_MANAGER_MARIADB_PORT_EXTERNAL>+${mariadb.port}</MESH_TESTDB_MANAGER_MARIADB_PORT_EXTERNAL>
									<MESH_TESTDB_MANAGER_MARIADB_USERNAME>meshdbuser</MESH_TESTDB_MANAGER_MARIADB_USERNAME>
									<MESH_TESTDB_MANAGER_MARIADB_PASSWORD><![CDATA[changeitNow4567&]]></MESH_TESTDB_MANAGER_MARIADB_PASSWORD>

									<MESH_TESTDB_MANAGER_POSTGRES_ENABLED>false</MESH_TESTDB_MANAGER_POSTGRES_ENABLED>
									<MESH_TESTDB_MANAGER_MSSQL_ENABLED>false</MESH_TESTDB_MANAGER_MSSQL_ENABLED>
									<MESH_TESTDB_MANAGER_ORACLE_ENABLED>false</MESH_TESTDB_MANAGER_ORACLE_ENABLED>
								</env>
								<wait>
									<log>.*WebSocket ready for connections.*</log>
									<time>60000</time>
								</wait>
								<ports>
									<port>8080:8080</port>
								</ports>
							</run>
						</image>
					</images>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>test-jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
