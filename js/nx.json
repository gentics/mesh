{
    "extends": "nx/presets/npm.json",
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "defaultBase": "master",
    "cli": {
        "packageManager": "npm"
    },
    "workspaceLayout": {
        "libsDir": "packages"
    },
    "parallel": 3,
    "useInferencePlugins": false,
    "release": {
        "projectsRelationship": "independent",
        "projects": [
            "tag:lib"
        ]
    },
    "plugins": [
        {
            "plugin": "@nx/eslint/plugin",
            "options": {
                "targetName": "lint"
            }
        }
    ],
    "generators": {
        "@nx/angular:library": {
            "linter": "eslint",
            "unitTestRunner": "jest"
        },
        "@nx/angular:component": {
            "type": "component"
        },
        "@schematics/angular:component": {
            "type": "component"
        },
        "@nx/angular:directive": {
            "type": "directive"
        },
        "@schematics/angular:directive": {
            "type": "directive"
        },
        "@nx/angular:service": {
            "type": "service"
        },
        "@schematics/angular:service": {
            "type": "service"
        },
        "@nx/angular:scam": {
            "type": "component"
        },
        "@nx/angular:scam-directive": {
            "type": "directive"
        },
        "@nx/angular:guard": {
            "typeSeparator": "."
        },
        "@schematics/angular:guard": {
            "typeSeparator": "."
        },
        "@nx/angular:interceptor": {
            "typeSeparator": "."
        },
        "@schematics/angular:interceptor": {
            "typeSeparator": "."
        },
        "@nx/angular:module": {
            "typeSeparator": "."
        },
        "@schematics/angular:module": {
            "typeSeparator": "."
        },
        "@nx/angular:pipe": {
            "typeSeparator": "."
        },
        "@schematics/angular:pipe": {
            "typeSeparator": "."
        },
        "@nx/angular:resolver": {
            "typeSeparator": "."
        },
        "@schematics/angular:resolver": {
            "typeSeparator": "."
        }
    },
    "namedInputs": {
        "sharedGlobals": [
            "{workspaceRoot}/package.json",
            "{workspaceRoot}/tsconfig.json"
        ],
        "default": [
            "sharedGlobals",
            "{projectRoot}/src/**/*.ts",
            "{projectRoot}/project.json",
            "{projectRoot}/tsconfig.json",
            "{projectRoot}/tsconfig.app.json",
            "{projectRoot}/tsconfig.lib.json"
        ],
        "building": [
            "default",
            "!{projectRoot}/src/**/*.spec.ts"
        ],
        "production": [
            "building",
            "{projectRoot}/package.json",
            "{projectRoot}/ng-package.json"
        ],
        "linting": [
            "{workspaceRoot}/eslint.config.mjs"
        ],
        "jestTests": [
            "{projectRoot}/src/**/*.spec.ts",
            "{projectRoot}/tsconfig.spec.json",
            "{projectRoot}/jest.config.ci.js",
            "{projectRoot}/jest.config.js",
            "{workspaceRoot}/jest.config.ts",
            "{workspaceRoot}/jest.preset.ts"
        ]
    },
    "targetDefaults": {
        "lint": {
            "executor": "@nx/eslint:lint",
            "cache": true,
            "inputs": ["default", "linting"],
            "options": {
                "lintFilePatterns": [
                    "{projectRoot}/**/*.[jt]s"
                ],
                "fix": true,
                "eslintConfig": "eslint.config.mjs"
            }
        },
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["production", "^production"],
            "cache": true
        },
        "@nx/jest:jest": {
            "cache": true,
            "inputs": ["default", "jestTests", "^default"],
            "options": {
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        }
    }
}
