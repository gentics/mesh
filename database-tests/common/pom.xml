<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.gentics.mesh</groupId>
		<artifactId>mesh-database-tests</artifactId>
		<version>3.0.5-SNAPSHOT</version>
	</parent>
	<artifactId>mesh-database-tests-common</artifactId>
	<name>Gentics Mesh - Tests - Common Database code</name>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.gentics.mesh</groupId>
				<artifactId>mesh-bom</artifactId>
				<type>pom</type>
				<scope>import</scope>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>com.gentics.mesh</groupId>
				<artifactId>mesh-bom</artifactId>
				<type>pom</type>
				<scope>import</scope>
				<version>${project.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<dependencies>
		<dependency>
			<groupId>com.gentics.mesh</groupId>
			<artifactId>mesh-server</artifactId>
		</dependency>
		<dependency>
			<groupId>com.gentics.mesh</groupId>
			<artifactId>tests-mesh-hibernate</artifactId>
		</dependency>
		<dependency>
			<groupId>com.gentics.mesh</groupId>
			<artifactId>mesh-test-common</artifactId>
		</dependency>
		<dependency>
			<groupId>com.gentics.mesh</groupId>
			<artifactId>mesh-tests-context-api</artifactId>
		</dependency>

		<dependency>
			<groupId>org.hsqldb</groupId>
			<artifactId>hsqldb</artifactId>
		</dependency>

		<!-- Tests -->
		<dependency>
			<groupId>com.gentics.mesh</groupId>
			<artifactId>tests-mesh-core</artifactId>
		</dependency>
		<dependency>
			<groupId>com.gentics.mesh</groupId>
			<artifactId>tests-mesh-api</artifactId>
		</dependency>
		<dependency>
			<groupId>com.gentics.mesh</groupId>
			<artifactId>tests-mesh-rest-model</artifactId>
		</dependency>
		<dependency>
			<groupId>com.gentics.mesh</groupId>
			<artifactId>tests-mesh-rest-client</artifactId>
		</dependency>
		<dependency>
			<groupId>com.gentics.mesh</groupId>
			<artifactId>tests-mesh-plugin-api</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.gentics.mesh</groupId>
			<artifactId>tests-mesh-elasticsearch</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.gentics.mesh</groupId>
			<artifactId>tests-mesh-distributed</artifactId>
		</dependency>
		<dependency>
			<groupId>com.gentics.mesh</groupId>
			<artifactId>tests-mesh-distributed-coordinator</artifactId>
		</dependency>
		<dependency>
			<groupId>com.gentics.mesh</groupId>
			<artifactId>tests-mesh-service-aws-s3-storage</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.gentics.mesh</groupId>
			<artifactId>tests-mesh-service-image-imgscalr</artifactId>
		</dependency>
		<dependency>
			<groupId>com.gentics.mesh</groupId>
			<artifactId>tests-mesh-service-jwt-auth</artifactId>
		</dependency>
		<dependency>
			<groupId>com.gentics.mesh</groupId>
			<artifactId>tests-mesh-service-local-storage</artifactId>
		</dependency>
		<dependency>
			<groupId>com.gentics.mesh</groupId>
			<artifactId>tests-mesh-service-metrics-prometheus</artifactId>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>compile</scope>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>com.gentics.mesh</groupId>
				<artifactId>test-scanner-maven-plugin</artifactId>
				<version>${project.version}</version>
				<configuration>
					<splits>${test.scanner.splits}</splits>
					<dependenciesToScan>
						<dependency>com.gentics.mesh:tests-mesh-api</dependency>
						<dependency>com.gentics.mesh:tests-mesh-core</dependency>
						<dependency>com.gentics.mesh:tests-mesh-rest-model</dependency>
						<dependency>com.gentics.mesh:tests-mesh-rest-client</dependency>
						<dependency>com.gentics.mesh:tests-mesh-plugin-api</dependency>
						<dependency>com.gentics.mesh:tests-mesh-server</dependency>
						<dependency>com.gentics.mesh:tests-mesh-elasticsearch</dependency>
						<dependency>com.gentics.mesh:tests-mesh-distributed</dependency>
						<dependency>com.gentics.mesh:tests-mesh-distributed-coordinator</dependency>
						<dependency>com.gentics.mesh:tests-mesh-service-aws-s3-storage</dependency>
						<dependency>com.gentics.mesh:tests-mesh-service-image-imgscalr</dependency>
						<dependency>com.gentics.mesh:tests-mesh-service-jwt-auth</dependency>
						<dependency>com.gentics.mesh:tests-mesh-service-local-storage</dependency>
						<dependency>com.gentics.mesh:tests-mesh-service-metrics-prometheus</dependency>
						<dependency>com.gentics.mesh:mesh-tests</dependency>
						<dependency>com.gentics.mesh:tests-mesh-hibernate</dependency>
					</dependenciesToScan>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>scan-test-files</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
